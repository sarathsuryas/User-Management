<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>
  <link rel="stylesheet" href="/stylesheets/adminhome.css">
  <style>
    .container {
      display: flex;
      justify-content: space-between;
    }
    .left-container {
      width: 50%;
    }
    .right-container {
      width: 50%;
    }
  </style>
</head>
<body>
  <div>
   
      <h1 style="color: red;">User Search</h1>
      <form class="container left-container" action="/admin/search" method="GET">
        <label for="username">Username:</label>
        <input style="width: 400px;" type="text" id="username" name="search">
        <br>
        <button type="submit">Search</button>
      </form>

      <table border="1" style="background-color: white;color:black;margin-left: 300px;">
        <tr>
          <th>Username</th>
          <th>Email</th>
        </tr>
        <% if(result && result.length>0){ %>
        <tr>
         
          <td><%=result[0].username%></td>
          <td><%=result[0].email%></td>
        </tr>
        <% } %>
      </table>
   
  </div>

  <div class="container">
    <div class="left-container">
      
        <h1>Add User</h1>
        <form id="addUserForm" action="/admin/adduser" method="post">
          <label for="username">Username:</label>
          <input type="text" id="username" name="username" required>
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required>
          <button type="submit">Add User</button>
        </form>
      
    </div>

    <div class="right-container">
      
        <h1>User Data</h1>
        <table border="1" style="width: 500px;">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Remove User</th>
              <th>Update User</th>
            </tr>
          </thead>
          <tbody>
            <% userData.forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><button class="Btna" onclick="removeUser('<%=user.id %>')">REMOVE</button></td>
                <td><button class="Btnb"><a href="/admin/update/<%= user.id%>" style="text-decoration: none;color: white;";>Update</a></button></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
     
    </div>
  </div>

  <div>
    <p  style="text-align: center">
      <button class="logout" style="color: white;"><a href="/admin/logout" style="text-decoration: none;color:white;">Log Out</a></button>
    </p>
  </div>
  <script src="/javascripts/adminhome.js"></script>
</body>
</html>
